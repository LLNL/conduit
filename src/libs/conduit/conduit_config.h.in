#cmakedefine CONDUIT_FORTRAN_COMPILER "${CONDUIT_FORTRAN_COMPILER}"

#cmakedefine CONDUIT_USE_FMT

#cmakedefine CONDUIT_USE_CXX11

#cmakedefine CONDUIT_USE_CALIPER

