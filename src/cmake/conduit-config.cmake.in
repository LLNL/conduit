cmake_minimum_required(VERSION 3.0 FATAL_ERROR)

@PACKAGE_INIT@

# Conduit version number
set(CONDUIT_VERSION "@CONDUIT_VERSION@")

set(CONDUIT_INCLUDE_DIRS "@PACKAGE_CONDUIT_INSTALL_INCLUDE_DIR@")

# This is true when the package is still in the build directory (not installed)
if(CMAKE_CURRENT_LIST_DIR STREQUAL "@CONDUIT_BINARY_DIR@/@CONDUIT_INSTALL_CONFIG_DIR@")
  set(CONDUIT_PACKAGE_IN_BUILD TRUE)
endif()


set(CONDUIT_INCLUDE_DIRS "@PACKAGE_CONDUIT_INSTALL_INCLUDE_DIR@")
set(CONDUIT_TPLS_HDF5_DIR  "@HDF5_DIR@")
set(CONDUIT_TPLS_ADIOS_DIR "@ADIOS_DIR@")



